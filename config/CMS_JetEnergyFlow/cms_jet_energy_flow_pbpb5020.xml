<?xml version="1.0"?>

<jetAnalysis>

  <mode>0</mode>  <!-- 0: w/ combine, 1: w/o combine, 2: only combine-->
  <subtractionMethod>NaiveNegativeSub</subtractionMethod>

  <!-- Jet Reconstruction-->
  <jetReco>
    <reconstructionMethod>NegativeReco</reconstructionMethod>
    <jetR>
      <Item>0.05</Item>
      <Item>0.1</Item>
      <Item>0.15</Item>
      <Item>0.2</Item>
      <Item>0.25</Item>
      <Item>0.3</Item>
      <Item>0.35</Item>
      <Item>0.4</Item>
    </jetR>

    <chJet>1</chJet>    <!-- 0: full jet, 1: charged jet -->

    <jetRapidity>1</jetRapidity>    <!-- 0: rapidity(Y), 1: pseudorapidity(Eta) -->
    <jetRapMin>
      <Item>0</Item>
    </jetRapMin>
    <jetRapMax>
      <Item>0.5</Item>
    </jetRapMax>

    <!-- For ALICE Unfolded resutls -->
    <jetConstPtMin>0.150</jetConstPtMin>
    <jetConstPtMax>100.0</jetConstPtMax>

    <jetPtMin>
      <Item>40</Item>
      <Item>60</Item>
    </jetPtMin>
    <jetPtMax>
      <Item>60</Item>
      <Item>80</Item>
    </jetPtMax>

    <nJetEv>0</nJetEv>    <!-- 0: inclusive -->


    <leading>1</leading>
    <leadMethod>C</leadMethod>    <!-- Const (jet constituents) or Area (inside of jet cone R) -->
    <leadPtMin>8</leadPtMin>    <!-- in GeV -->
  </jetReco>

  <!-- Set Particle Mass -->
  <massAdjust>
    <adjust>0</adjust>
    <!-- <adjustedQuant>E</adjustedQuant>     -->
    <!-- MOM, Mom, mom, MOMENTUM, Momentum, momentum, P, p: momentum
    ENE, Ene, ene, ENERGY, Energy, energy, E, e: energy -->
    <!-- <mass>-211</mass>     -->
    <!-- 0 or positive value: mass in GeV, negative value: particle id-->
  </massAdjust>

  <!-- Observable -->
  <observable>

    <CMSJetEnergyFlow>
      <name>CMS Jet Energy Flow</name>
      <chParticle>1</chParticle>

      <particleRapidity>1</particleRapidity>
      <particleRapMin>
        <Item>0.0</Item>
      </particleRapMin>
      <particleRapMax>
        <Item>2.0</Item>
      </particleRapMax>

      <!-- For ALICE Unfolded resutls -->
      <particlePtMin>
        <Item>0.150</Item>
      </particlePtMin>
      <particlePtMax>
        <Item>100.0</Item>
      </particlePtMax>

      <delta_R_match>
        0.2
      </delta_R_match>


      <var>

        <deltaPt>
          <Item>-1.5</Item>
          <Item>1.5</Item>
          <Item>4.5</Item>
          <Item>7.5</Item>
          <Item>10.5</Item>
          <Item>13.5</Item>
          <Item>16.5</Item>
          <Item>19.5</Item>
          <Item>22.5</Item>
          <Item>25.5</Item>
          <Item>28.5</Item>
        </deltaPt>

        <meanDeltaPt>
          <Item>0</Item>
          <Item>1</Item>
        </meanDeltaPt>


      </var>
    </CMSJetEnergyFlow>

  </observable>

  <inputFiles>
    <inputStyle>JetScapeAscii</inputStyle>
    <events>
      <head>JetscapeHadronListBin</head>
      <join>_</join>
      <tail>.out</tail>
    </events>
    <sigma>
      <path>/wsu/home/go/go54/go5410/maj-shen/AAPaperData/PP13000/PurePythia13000</path>
      <head>SigmaHardBin</head>
      <join>_</join>
      <tail>.out</tail>
    </sigma>
    <divNum>0</divNum>    <!-- 0: default, 1-:  divided-->
    <divUnit>_Run</divUnit>
  </inputFiles>

