<?xml version="1.0"?>

<jetAnalysis>

  <mode>0</mode>  <!-- 0: w/ combine, 1: w/o combine, 2: only combine-->
  <subtractionMethod>NaiveNegativeSub</subtractionMethod>

  <!-- Jet Reconstruction-->
  <jetReco>
    <reconstructionMethod>NegativeReco</reconstructionMethod>
    <jetR>
      <Item>0.2</Item>    
      <Item>0.4</Item>      
    </jetR>

    <chJet>1</chJet>    <!-- 0: full jet, 1: charged jet -->

    <jetRapidity>1</jetRapidity>    <!-- 0: rapidity(Y), 1: pseudorapidity(Eta) -->
    <jetRapMin>
      <Item>0</Item>
      <Item>0</Item>      
    </jetRapMin>
    <jetRapMax>
      <Item>0.7</Item>
      <Item>0.5</Item>      
    </jetRapMax>

    <!-- For ALICE Unfolded resutls -->
    <jetConstPtMin>0.0</jetConstPtMin>
    <jetConstPtMax>200.0</jetConstPtMax>

    <jetPtMin>
      <Item>10</Item>
      <Item>30</Item>
    </jetPtMin>
    <jetPtMax>
      <Item>30</Item>    
      <Item>50</Item>
    </jetPtMax>
    <nJetEv>0</nJetEv>    <!-- 0: inclusive -->
  </jetReco>

  <!-- Observable -->
  <observable>

    <SoftDropGroom>
      <name>Soft Drop Grooming</name>
      <chParticle>1</chParticle>
      <!-- <statParticle>
        <Item>0</Item>
        <Item>1</Item>
        <Item>-1</Item>
      </statParticle> -->

      <particleRapidity>1</particleRapidity>

      <particleRapMin>
        <Item>0.0</Item>
      </particleRapMin>
      <particleRapMax>
        <Item>0.9</Item>
      </particleRapMax>

      <!-- For ALICE Unfolded resutls -->
      <particlePtMin>
        <Item>0.0</Item>
      </particlePtMin>
      <particlePtMax>
        <Item>200.0</Item>
      </particlePtMax>

      <beta>
        <Item>0.0</Item>
      </beta>
      <zCut>
        <Item>0.2</Item>
        <Item>0.4</Item>                
      </zCut>

      <var>

        <zG>
          <Item>0.2</Item>
          <Item>0.26</Item>
          <Item>0.32</Item>
          <Item>0.38</Item>
          <Item>0.44</Item>
          <Item>0.5</Item>
        </zG>

        <thetaG>
          <Item>0</Item>
          <Item>0.2</Item>
          <Item>0.4</Item>
          <Item>0.7</Item>
          <Item>1.0</Item>
        </thetaG>

        <rG>
          <Item>0</Item>
          <Item>1.0</Item>
        </rG>

        <mG>
          <Item>0</Item>
          <Item>5000.0</Item>
        </mG>

        <mGOverPt>
          <Item>0.0</Item>
          <Item>1.0</Item>
        </mGOverPt>

        <ktG>
          <Item>0.0</Item>            
          <Item>50000.0</Item>
        </ktG>


      </var>
    </SoftDropGroom>

  </observable>

  <inputFiles>
    <inputStyle>JetScapeAscii</inputStyle>
    <events>
      <head>JetscapeHadronListBin</head>
      <join>_</join>
      <tail>.out</tail>
    </events>
    <sigma>
      <path>/wsu/home/groups/maj-shen/AAPaperData/pTHatCrossSection_200GeV</path>
      <head>SigmaHardBin</head>
      <join>_</join>
      <tail>.out</tail>
    </sigma>
    <divNum>50</divNum>    <!-- 0: default, 1-:  divided-->
    <divUnit>_Run</divUnit>
  </inputFiles>

  <!-- ptHatBins -->
  <ptHat>
    <Item>1</Item>
    <Item>2</Item>
    <Item>3</Item>
    <Item>4</Item>
    <Item>5</Item>
    <Item>7</Item> 
    <Item>9</Item> 
    <Item>11</Item>
    <Item>13</Item>
    <Item>15</Item>
    <Item>17</Item>
    <Item>20</Item>
    <Item>25</Item>
    <Item>30</Item>
    <Item>35</Item>
    <Item>40</Item>
    <Item>45</Item>
    <Item>50</Item>
    <Item>55</Item>
    <Item>60</Item>
    <Item>70</Item>
    <Item>80</Item>
    <Item>90</Item>
    <Item>100</Item>
  </ptHat>
  
</jetAnalysis>
